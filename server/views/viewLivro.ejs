<!DOCTYPE html>
<html lang="pt-Br">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="reset.css"><!--limpa as config padrao do navegador-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Livros</title>

    <style>
        .disponivel {
            color: green;
        }
        .emprestado {
            color: red;
        }
    </style>
</head>
<body style="color: white;background-color: #1d2630; ">
    <div class="container mt-5">
      <div class="text-center">
        <h1><str>Livros</str></h1>
      </div>
      <div class="main row justify-content-center">
        <!--cadastrar Livro-->
        <form action="http://localhost:3000/livro/createLivro" method="post" class="row g-3" autocomplete="off">
  
          <div class="col-md-4">
            <label for="nome">Nome:</label><br>
            <input type="text" id="nome" name="nome" placeholder="Exemplo: O pequeno principe" class="form-control"><br>
          </div>
  
          <div class="col-md-5">
            <label for="autor">Autor</label><br>
            <input type="text" id="autor" name="autor"  class="form-control" placeholder="Antoine de Saint-Exupéry" ><br><br>
          </div>
  
          <div class="col-3">
            <label for="editora">Edição:</label><br>
            <input type="number" id="editora" name="editora" placeholder="Exemplo: 9639303556" class="form-control" ><br><br>
          </div>
  
          <div class="col-10 mt-0">
            <input class="btn btn-success add-btn" type="submit" value="Cadastrar Livro">
            <input class="btn btn-secondary" type="reset" value="Limpar">
          </div>
        </form> 
  
        <!--buscar cliente-->
        <div  class="row g-3">
          <div class="rounded mt-5" style="background-color: #393b3e;">
            <form action="http://localhost:3000/client/getClient" method="get"  autocomplete="off" style="margin: 20px 0px 20px 0px;padding: 15px; ">
              <div class="col-12">
                <input type="hidden" name="tipo" value= "filtro">
                <label for="cpf">Buscar por nome:</label><br>
                <input type="text" id="cpf" name="cpf" placeholder="O pequeno principe" class="form-control" ><br>
              </div>
              <div class="col-10">
                <input class="btn btn-dark add-btn" style="margin-right: 5px;" type="submit" value="Filtrar">
                <a href="http://localhost:3000/livro/" class="btn btn-light">Resetar Filtro</a>
              </div>
  
            </form>
          </div>
        </div>
        <div class="col-12 mt-3">
          <table class="table table-striped table-dark">
            <thead>
              <th>Id</th>
              <th>Nome</th>
              <th>Autor</th>
              <th>Edição</th>
              <th>Situação</th>
              <th>Ação</th>
            </thead>
            <tbody>
              <% rows.forEach((row) => { %>
                <tr>
                  <td><%= row.id %></td>
                  <td><%= row.nome %></td>
                  <td><%= row.autor %></td>
                  <td><%= row.editora %></td>
                  <td class="<%= row.situacao ? 'emprestado' : 'disponivel' %>"><%= row.situacao ? 'Emprestado' : 'Disponível' %></td>
                  <td>
                    <form action="http://localhost:3000/client/getCLient" method="put" class="d-grid gap-2">
                      <input type="hidden" name="tipo" value="update">
                      <input type="hidden" name="cpf" value=<%= row.cpf %>>
                      <button class="btn btn-warning btn-sm edit" type="submit">Editar</button>
                    </form>
                    <form action="http://localhost:3000/client/delete" method="get" class="d-grid gap-2" style="margin-top: 10px;">
                      <input type="hidden" name="cpf" value=<%= row.cpf %>>
                      <button class="btn btn-danger btn-sm delete" type="submit">Deletar</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <script src="script.js"></script>
  </body>